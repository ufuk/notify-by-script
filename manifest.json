{
  "manifest_version": 3,
  "name": "Notify by Script",
  "description": "Extension for setting notifications that prepared by scripts.",
  "version": "1.0.6",
  "author": "Ufuk Uzun",
  "icons": {
    "128": "icon-128.png",
    "256": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "sandbox": {
    "pages": [
      "sandbox.html"
    ]
  }
}